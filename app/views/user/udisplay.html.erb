

  <!-- Masthead -->
  <header class="masthead">
    <div class="container h-100">
      <div class="row h-100 align-items-center justify-content-center text-center">
        <div class="col-lg-10 align-self-end">

          <div class="container">

          
            <U><h2>Profil de <%= @user.find(params['id']).first_name  %></h2></U><br/>
              <div class="row h-100 align-items-center justify-content-center text-center">
              <div class="container">
                <%= image_tag("profil.jpg", class: "figure-img rounded user") %>
              </div>
              <div class="container">
                Email : <%= @user.find(params['id']).email  %><br>
                Age : <%= @user.find(params['id']).age  %><br>
                Description : <%= @user.find(params['id']).description  %><br>
              </div>
              </div>     
          </div>

        </div>
        <div class="col-lg-8 align-self-baseline">
          <p class="text-white-75 font-weight-light mb-5"></p>
          
        </div>
      </div>
    </div>
  </header>

