
  <!-- Masthead -->
  <header class="masthead">
    <div class="container h-100">
      <div class="row h-100 align-items-center justify-content-center text-center">
        <div class="col-lg-10 align-self-end">
          <div class="container">
            <div class="card text-center">
              <div class="card-header">
                 
              </div>
              <div class="card-body">
                <h4 class="card-title"> Edite ton commentaire  </h4>
                          <% if @comment.errors.any? %>
                            <div class="alert alert-danger" role="alert">
                              <p>Nous n'avons pas réussi à modifier le potin pour la (ou les) raison(s) suivante(s) :</p>
                              <ul>
                                <% @comment.errors.full_messages.each do |message| %>
                                  <li><%= message %></li>
                                <% end %>
                              </ul>
                            </div>
                          <% end %>
                <p class="card-text">   </p>
                  <div class="text-muted">
                    <%= form_for @comment, :url => "/gossips/#{@comment.commentable_id}/comments/#{@comment.id}" do |f| %>
                      <div class="form-group">
                      <label> Contenu du commentaire </label>
                      <%= f.text_field :content, class:'form-control'%>
                      </div><br/>
                      <div class="form-group">
                      <button type='submit' class="btn btn-update"> Editer le commentaire </button>
                      <a class="btn btn-warning" href="<%=gossip_comment_path(@comment.id)%>" role="button" data-confirm="Etes-vous sur?" data-method="DELETE" >Supprimer</a>
                      </div>
                  </div>
                      <%end%>

                  </div>
              <div class="card-footer text-muted">
                2 days ago
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-8 align-self-baseline">
          <p class="text-white-75 font-weight-light mb-5"></p>
          
        </div>
      </div>
    </div>
  </header>


