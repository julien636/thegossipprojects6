

  <!-- Masthead -->
  <header class="masthead">
    <div class="container h-100">
      <div class="row h-100 align-items-center justify-content-center text-center">
        <div class="col-lg-10 align-self-end">
          <h1 class="text-uppercase text-white font-weight-bold">GossipBook - What else?</h1>
          <hr class="divider my-4">
        </div>
        <div class="col-lg-8 align-self-baseline">
          <h3 class="text-white-75 font-weight-light mb-5">Bienvenue !</h3>
          <a class="btn btn-primary btn-xl js-scroll-trigger" href="#about">Find Out More (Ou pas!)</a>
        </div>
      </div>
    </div>
  </header>


  <!-- Services Section -->
  <section class="page-section" id="services">
    <div class="container">
      <h2 class="text-center mt-0"><a href="/gossips/new/">Créer un gossip</a></h2>
      <hr class="divider my-4">
      

        <h2 class='text-center mt-0'> Gossip du jour </h2><br>
       
      
       <hr class="divider my-4"><br>
      <div class="container d-flex flex-wrap justify-content-around">
        <% @gossips.each_with_index do |gossip,index| %>
          <p>
            <div class="card" style="width: 18rem;">
              <div class="card-body">
                <h5 class="card-title"><%= gossip.user.first_name %><br/></h5>
                <p class="card-text"><%= link_to "#{gossip.content}", gossip_path(gossip.id) %></p>
              </div>
            </div>

          </p>
        <% end %><br/>
      </div>
      <div class="row">
        <h3> Rechercher un gossip </h3>
      </div>
      <div class="row">
        <form action='/' method='POST'>
          Saisi ici le numéro du gossip :  <input type='text' name='index'/><br/>
          <input type='submit' value="Compte à la main, j'avais la flemme de puts les index"/>
        </form>




      </div>
    </div>
  </section>


