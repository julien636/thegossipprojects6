
  <!-- Masthead -->
  <header class="masthead">
    <div class="container h-100">
      <div class="row h-100 align-items-center justify-content-center text-center">
        <div class="col-lg-10 align-self-end">
                                    <% if @newuser.errors.any? %>
                                      <div class="alert alert-danger" role="alert">
                                        <p>Nous n'avons pas réussi à modifier le potin pour la (ou les) raison(s) suivante(s) :</p>
                                        <ul>
                                          <% @newuser.errors.full_messages.each do |message| %>
                                            <li><%= message %></li>
                                          <% end %>
                                        </ul>
                                      </div>
                                    <% end %>

          <%= form_tag url_for(action: 'create'), method: "post" do %>

          <%= label_tag 'Prénom' %>
          <%= text_field_tag 'first_name', @newuser.first_name %>
          <br /> <br />

          <%= label_tag 'Nom' %>
          <%= text_field_tag 'last_name', @newuser.last_name %>
          <br /> <br />

          <%= label_tag 'Email' %>
          <%= text_field_tag 'email', @newuser.email %>
          <br /> <br />

          <%= label_tag 'Password' %>
          <%= text_field_tag 'password', @newuser.password %>
          <br /> <br />

          <%= label_tag 'Description' %>
          <%= text_field_tag 'description', @newuser.description %>
          <br /> <br />

          <%= label_tag 'Age' %>
          <%= text_field_tag 'age', @newuser.description %>
          <br /> <br />
          

          <%= submit_tag "Inscription" %>
          <% end %>



        </div>
        <div class="col-lg-8 align-self-baseline">

        </div>
      </div>
    </div>
  </header>


